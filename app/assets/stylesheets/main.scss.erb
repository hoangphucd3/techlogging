form .label {
  font-weight: bold
}

body {
  background-color: #fff;
  font-size: 15px
}

body.body-iframe {
  padding-top: 0
}

html, body {
  width: 100%;
  overflow-x: hidden;
  position: relative
}

.page-header {
  z-index: 1000001;
  min-height: 50px;
  font-size: 14px;
  position: relative;
}

.page-header .fixation {
  position: relative;
  width: 100%;
  z-index: 1000001;
}

.page-header .fixation.fixed {
  position: fixed;
  top: 0;
  transition: transform 0.5s ease, opacity 0.25s linear;
}

.page-header .nav-social-links {
  height: 40px;
  line-height: 40px;
  background: #1f71ad;
  text-align: right;
  font-size: 18px;
  display: none;
}

.page-header .masthead {
  background: #2378b8;
  height: 50px;
  position: relative;
}

.page-header .masthead .container-header {
  overflow: visible;
  padding: 0;
  height: 50px;
}

.page-header .masthead .container-header .site-logo .text-logotype {
  float: left;
  margin: 5px 5px 0 0;
  color: #fff;
  font-size: 2em;
}

.page-header .masthead .container-header .logo-large {
  display: none;
}

.page-header .masthead .container-header .search-large {
  display: none;
}

.page-header .masthead .container-header .primaryNav .navListMobile {
  display: table;
  width: 100%;
  height: 50px;
  position: absolute;
  left: 0;
  top: 0;
  margin: 0;
  padding: 0;
}

.page-header .masthead .container-header .primaryNav .navListMobile li.logo-small {
  padding: 0 0 0 5px;
  border-left: none;
  width: 35%;
  display: table-cell;
  vertical-align: middle;
}

#mantle_skin {
  position: relative;
  height: 100%;
}

#content {
  background: #fff;
  padding-bottom: 10px;
  padding-top: 10px;
  position: relative;
}

.container {
  padding-left: 10px;
  padding-right: 10px;
}

.featured-topics {
  display: none;
}

.section-heading {
  border-top: 2px solid #e4eaef;
  margin-bottom: 10px;
  padding: 10px 0 10px;
  position: relative;
}

.section-heading h2, .section-heading h3 {
  font-size: 14px;
  line-height: 1;
  margin: 0;
  text-transform: uppercase;
  color: #2077ba;
}

.section-heading h2 .heading, .section-heading h3 .heading {
  position: relative;
}

.section-heading h2 .heading::before, .section-heading h3 .heading::before {
  display: inline-block;
  position: absolute;
  top: -10px;
  left: 0;
  content: "";
  background-color: #2077ba;
  height: 2px;
  width: 100%;
}

.featured-topics ul {
  margin: 0;
  list-style: none;
}

.featured-topics ul li:not(:last-child) {
  margin-bottom: 20px;
}

.media-list, .tabs, .dropdown-menu ul, .social-links ul {
  margin: 0;
  list-style: none;
}

.content-list .items {
  color: #47515a;
  list-style: none;
  margin: 0 0 20px;
}

.content-list .items li {
  margin-bottom: 0;
}

.content-list .items > li {
  overflow: auto;
}

.media::before, .media-list li::before, .tabs::before, form .row::before, form [data-item="field"]::before, .social-links::before, .media::after, .media-list li::after, .tabs::after, form .row::after, form [data-item="field"]::after, .social-links::after {
  content: "";
  display: table;
}

.content-list .items .item-content {
  overflow: hidden;
}

.thumbnail {
  display: block;
  position: relative;
}

.content-list .items .thumbnail {
  float: left;
  margin-right: 20px;
  overflow: hidden;
  width: 60px;
  height: 45px;
  position: relative;
}

.content-list .items .thumbnail img {
  animation: fadeIn 0.3s ease;
}

.content-list .items .thumbnail::after {
  content: "";
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.3;
  position: absolute;
  background: #1865a8;
  background: linear-gradient(to bottom, #1865a8 0%,#58aefa 100%);
  transition: opacity 0.2s;
}

.content-list .items .thumbnail:hover::after {
  opacity: 0;
}

.thumbnail img {
  display: block;
  margin: 0 auto;
  width: 100%;
  height: auto;
}

.content-list .items h3.title a {
  color: inherit;
}

.content-list .items h3.title a:hover {
  color: #3289C8;
  text-decoration: none;
}

.content-list .items .title {
  font-size: 22px;
  line-height: 1;
}

.content-list .items p {
  margin: 0;
}

.content-list .items .dek {
  display: none;
}

.content-list .items .meta, .content-list .items .vendor {
  color: #778596;
  font-size: 13px;
  font-weight: 400;
}

.page-heading {
  *zoom: 1;
  border-bottom: 1px solid #E0E0E0;
  margin: 0 0 20px;
  position: relative;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.page-heading h1, .page-heading h2, .page-heading p {
  margin: 0 0 10px;
}

.page-heading .categories {
  overflow: hidden;
}

.page-heading .categories .topic {
  background: #54af10;
  color: #fff;
  float: left;
  font-size: 13px;
  font-weight: bold;
  margin-right: 10px;
  padding: 1px 13px;
  text-transform: uppercase;
}

.page-heading .title {
  font-size: 26px;
  letter-spacing: -0.04em;
  line-height: 1.1;
  word-wrap: break-word;
}

.page-heading .byline {
  color: #778596;
  font-size: 14px;
}

.social-links {
  margin: 0 0 10px;
  -webkit-tap-highlight-color: transparent;
}

figure.image {
  margin-bottom: 20px;
  position: relative;
  width: 100%;
  max-width: 100%;
  clear: both;
}

figure.image img {
  margin-left: auto;
  margin-right: auto;
}

figure.image figcaption {
  color: #778596;
  font-size: 14px;
  text-align: center;
}

figure.image figcaption p {
  margin-bottom: 0;
}

figure.image.pull-left {
  float: left;
  width: auto;
  margin-right: 20px;
}

figure.image.pull-right {
  float: right;
  width: auto;
  margin-left: 20px;
}

.page-footer {
  background-color: #2378b8;
  color: #fff;
}

.page-footer .container {
  padding: 20px 0;
}

.page-footer .col-4 {
  padding-top: 0;
}

.page-footer .col-4 .section-heading {
  border-color: #1C69A1;
}

.page-footer .col-4 .section-heading h2 {
  color: #fff;
}

.section-heading h2 .heading, .section-heading h3 .heading {
  position: relative;
}

.section-heading h2 .heading::before, .section-heading h3 .heading::before {
  display: inline-block;
  position: absolute;
  top: -10px;
  left: 0;
  content: "";
  background-color: #2077ba;
  height: 2px;
  width: 100%;
}

.page-footer .col-4 .section-heading h2 .heading::before {
  background-color: #fff;
}

.page-footer .copyright {
  padding-bottom: 0;
}

.page-footer .copyright .container {
  padding-top: 0;
}
