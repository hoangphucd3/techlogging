<h1>Articles</h1>

<h2>List</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td>
        <%= link_to 'Edit', edit_admin_article_path(article.id), class: 'btn btn-primary btn-sm'  %>
        <%= link_to 'Delete', admin_article_path(article.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary btn-sm'  %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
