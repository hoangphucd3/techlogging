<h1>Articles</h1>
<div class="my-4">
  <%= link_to 'New article', new_admin_article_path, class: 'btn btn-primary' %>
</div>

<h2>List</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Status</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'article', collection: @articles %>
    </tbody>
  </table>
</div>
