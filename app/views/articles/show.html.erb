<div class="container page-heading-container">
  <div class="row">
    <div class="col-12">
      <header class="page-heading">
        <p class="categories">
          <%= render partial: 'topic', collection: @article.topics %>
        </p>
        <h1 class="title"><%= @article.title %></h1>
        <div class="article-single">
          <p class="takeaway" itemprop="description"><%= @article.description %></p>
        </div>
        <p class="byline">
          <span class="date"><%= @article.updated_at %></span>
        </p>
      </header>
    </div>
  </div>
</div>

<div id="mantle_skin">
  <div id="content">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="row">
            <div class="col-8">
              <article class="article-single">
                <div class="col-main col-8">
                  <div class="content">
                    <%= @article.content.try(:html_safe) %>
                  </div>
                </div>
              </article>
            </div>
            <div class="col-4"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
